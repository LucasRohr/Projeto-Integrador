<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="../font/Ubuntu-Regular.ttf"
        android:text="Meu perfil"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="110dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="81dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="89dp"
        android:textColor="@color/purple"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_numero_listas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginEnd="82dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bt_mudar_senha"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="156dp"
        android:background="@color/purpleTrans"
        android:text="Mudar senha"
        android:textColor="@color/purple" />

    <Button
        android:id="@+id/bt_excluir_conta"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="79dp"
        android:background="@color/purpleTrans"
        android:text="Excluir conta"
        android:textColor="@color/purple" />

    <Button
        android:id="@+id/bt_mudar_login"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView5"
        android:layout_centerVertical="true"
        android:background="@color/purpleTrans"
        android:text="Mudar login"
        android:textColor="@color/purple" />

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="33dp"
        android:background="@color/purpleTrans"
        android:text="Logout"
        android:textColor="@color/purple" />

</RelativeLayout>